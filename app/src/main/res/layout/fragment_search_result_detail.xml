<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search_result_detail.SearchResultDetailFragment">




        <ImageView
            android:id="@+id/image_search_resault_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:src="@drawable/back_card_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_search_result_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="100dp"
            app:cardCornerRadius="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="-30dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_constraint1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="15dp"
                >


                <TextView
                    android:id="@+id/text_view_title_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/inter"
                    android:text="Boracay"
                    android:textColor="@color/primaryBlack"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter"
                    android:text="@string/philippines"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_title_detail" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="52dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/rounded_square_destination_code"
                    app:layout_constraintStart_toEndOf="@+id/text_view_title_detail"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:text="@string/_5d4n"
                        android:textColor="@color/black"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp"
                    android:text="@string/_345"
                    android:textColor="@color/primaryBlack"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_view_title_detail" />

            </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/card_constraint2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/card_constraint1"
                    android:layout_marginTop="23dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    >

                    <TextView
                        android:id="@+id/text_view_card_detail_overview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:text="@string/overview"
                        android:textColor="@color/primaryBlack"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_view_card_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/inter_extralight"
                        android:text="@string/card_detail_overview"
                        android:textColor="@color/primaryBlack"
                        android:textSize="15sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_card_detail_overview" />


                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/card_constraint3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/card_constraint2"
                    android:layout_marginTop="23dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp">

                    <TextView
                        android:id="@+id/text_view_card_detail_photos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter"
                        android:text="@string/result_details_photos"
                        android:textColor="@color/primaryBlack"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/photo_result_detail1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"

                        android:src="@drawable/carusel_photo1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_card_detail_photos"/>

                    <ImageView
                        android:id="@+id/photo_result_detail2"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/carusel_photo2"
                        app:layout_constraintStart_toEndOf="@+id/photo_result_detail1"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_card_detail_photos"
                        android:layout_marginStart="10dp"
                        />
                    <ImageView
                        android:id="@+id/photo_result_detail3"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/carusel_photo3"
                        app:layout_constraintStart_toEndOf="@+id/photo_result_detail2"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_card_detail_photos"
                        android:layout_marginStart="10dp"
                        />



                </androidx.constraintlayout.widget.ConstraintLayout>

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/orange_primary"
                    android:fontFamily="@font/inter"
                    android:text="@string/book_now"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/card_constraint3"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>